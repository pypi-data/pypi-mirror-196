version: '3.6'
services:
    {{ opts.full_name }}:
        image: {{ aux.project.slug }}-pre-commit-{{ opts.version_slug }}
        volumes:
            - {{ aux.docker.project_dir }}:/home/container/workdir:rw
        working_dir: /home/container/workdir
        command: [/bin/sh, -c,
            "git config --global --add safe.directory `pwd` && pre-commit run --config=devops/pre-commit/config.yaml --all"]
